<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="jumbotron timer">
      <div {{bindAttr class="isDone:done :icon :glyphicon :glyphicon-time"}}></div>
      <h1 {{bindAttr class="isDone:done"}}>{{format-remaining timeRemaining}}</h1>
      <p>Working on <strong>{{owner}}/{{repo}} #{{id}}</strong></p>
      <p><small><em>{{title}}</em></small></p>

      <div class="form-actions">
        {{#if isDone}}
          {{#linkTo "repo" class="btn btn-success btn-lg"}}Cool story breaux!{{/linkTo}}
        {{else}}
          {{#linkTo "repo" class="btn btn-danger btn-lg"}}Cancel{{/linkTo}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
